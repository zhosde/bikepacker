<h2>Create a new post</h2>

<form action="/posts/create" method="POST" enctype="multipart/form-data">
  <label>
    Title:
    <input type="text" name="title" required/>
  </label>
  <br />

  <label>
    City:
    <input type="text" name="city"> </input>
  </label>
  <br />

  <label>
    Route Length:
    <input type="text" name="routeLength" />
  </label>
  <br />

  <label>
    Content:
    <textarea type="text" name="content" cols='30' rows='4'> </textarea>
  </label>
  <br />

  <label>
    Upload Image:
    <input type="file" name="post-image" />
  </label>
  <br />
  <button type="submit"> Create </button>
  <label>
  {{#if errorMessage}} 
  {{errorMessage}}
  {{/if}}
  </label>
</form>