<h2>Create a new post</h2>

<form action="/post-create" method="POST">
  <label>
    Title:
    <input type="text" name="title" />
  </label>
  <br />

  <label>
    City:
    <textarea type="text" name="city"> </textarea>
  </label>
  <br />

  <label>
    Route Length:
    <input type="text" name="routeLength" />
  </label>
  <br />

  <label>
    Content:
    <textarea type="text" name="content"> </textarea>
  </label>
  <br />

  <label for="author-select">
    Created by:
    <select name="author">
      <option disable selected value=""></option>
      {{#each dbUsers}}
        <option value="{{this._id}}"> {{this.username}} </option>
      {{/each}}
    </select>
  </label>
  <br />

  <label>
    Upload Image:
    <input type="file" id="uploadFile" name="image" />
    <input type="submit" />
  </label>
  <br />
  <button type="submit"> Create the post </button>
</form>